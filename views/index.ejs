<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <title>Blog</title>
</head>
<body>
    <header>
        <h1>My Blog</h1>
        <a href="/new" class="btn">Create New Post</a>
    </header>
    <main>
        <% if (posts.length === 0) { %>
            <p>No posts yet! Click "Create New Post" to get started.</p>
        <% } else { %>
            <% posts.forEach(post => { %>
                <article>
                    <h2><%= post.title %></h2>
                    <p><%= post.content %></p>
                    <form action="/delete/<%= post.id %>" method="POST">
                        <a href="/edit/<%= post.id %>" class="btn">Edit</a>
                        <button type="submit" class="btn delete">Delete</button>
                    </form>
                </article>
            <% }); %>
        <% } %>
    </main>
</body>
</html>
